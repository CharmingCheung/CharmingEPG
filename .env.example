# CharmingEPG Configuration Template
# Copy this file to .env and modify the values as needed

# ============================================================================
# Application Settings
# ============================================================================

# Logging configuration
LOG_LEVEL=INFO
LOG_FILE=runtime.log
LOG_ROTATION=10 MB
LOG_RETENTION=7 days

# ============================================================================
# EPG Settings
# ============================================================================
#EPG接口缓存时间(秒)
EPG_CACHE_TTL=3600

# Update interval in minutes (default: 10)
EPG_UPDATE_INTERVAL=10

# EPG files base directory (default: epg_files)
EPG_BASE_DIR=epg_files

# Timezone for EPG data (default: Asia/Shanghai)
EPG_TIMEZONE=Asia/Shanghai

# ============================================================================
# Platform Enable/Disable Settings
# ============================================================================
# Set to true/false, 1/0, yes/no, or on/off to enable/disable platforms

# China (epg.pw) - Mainland China channels
EPG_ENABLE_CN=true

# MyTV Super (TVB) - Hong Kong TVB channels
EPG_ENABLE_TVB=true

# NowTV - Hong Kong NowTV channels
EPG_ENABLE_NOWTV=true

# Hami Video - Taiwan channels
EPG_ENABLE_HAMI=true

# Astro Go - Malaysia channels
EPG_ENABLE_ASTRO=true

# RTHK - Hong Kong public broadcaster
EPG_ENABLE_RTHK=true

# HOY TV - Hong Kong HOY channels
EPG_ENABLE_HOY=true

# StarHub - Singapore channels
EPG_ENABLE_STARHUB=true

# ============================================================================
# HTTP Client Settings
# ============================================================================

# HTTP request timeout in seconds (default: 30)
HTTP_TIMEOUT=30

# Maximum number of retries for failed requests (default: 3)
HTTP_MAX_RETRIES=3

# Retry backoff multiplier (default: 2.0)
HTTP_RETRY_BACKOFF=2.0

# ============================================================================
# Proxy Settings (Optional)
# ============================================================================
# Uncomment and configure if you need to use a proxy

# HTTP proxy URL
# PROXY_HTTP=http://proxy.example.com:8080

# HTTPS proxy URL
# PROXY_HTTPS=http://proxy.example.com:8080

# ============================================================================
# Development Settings
# ============================================================================

# Set to true to enable FastAPI auto-reload (development only)
# FASTAPI_RELOAD=false

# Set to true to enable FastAPI OpenAPI docs (development only)
# FASTAPI_DOCS=false